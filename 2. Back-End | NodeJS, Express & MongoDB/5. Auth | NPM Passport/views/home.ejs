<%- include ("layout/header")  %>
<div class="uk-container text-center" style="width: 400px; margin-top: 200px;">

    <h1 class="uk-text-large">Create Account</h1>
    <form action="/register" method="POST">
        <fieldset class="uk-fieldset">

            <div class="uk-margin">
                <input required name="username" class="uk-input" type="text" placeholder="User name...">
            </div>

            <div class="uk-margin">
                <input required name="password" class="uk-input" type="password" placeholder="Password...">
            </div>

            <div class="uk-margin">
                <input required name="userImage" class="uk-input" type="text" placeholder="Image URL...">
            </div>

            <button type="submit"
                class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom">Submit</button>
        </fieldset>
    </form>
    <a class="uk-link-muted" href="/login">Already register? Log In</a>

</div>
<%- include ("layout/footer")  %>
