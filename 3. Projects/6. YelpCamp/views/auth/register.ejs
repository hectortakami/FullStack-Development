<%- include ("../layouts/header") %>
<div class="container auth-form">
    <h1 class="text-center">Create Account</h1>
    <form class="mt-5" action="/register" method="POST">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input name="username" type="email" class="form-control" id="exampleInputEmail1"
                aria-describedby="emailHelp">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input name="password" type="password" class="form-control" id="exampleInputPassword1">
        </div>
        <div class="form-group">
            <label for="exampleInputImage">Image URL</label>
            <input name="image" type="text" class="form-control" id="exampleInputImage" aria-describedby="emailHelp">
            <small class="form-text text-muted">This will be your profile picture, please profile an URL.</small>
        </div>

        <button type="submit" class="btn btn-primary btn-lg btn-block my-5">Submit</button>
    </form>

    <div class="form-group text-center">
        <p>Already registered?<a href="/login"> Sign Up.</a></p>
    </div>
</div>
<%- include ("../layouts/footer") %>
