<%- include ("../layouts/header") %>
<div class="container">
    <h1 style="text-align: center; margin-top: 50px;">Edit Comment to <%= camp.name %> </h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= camp._id %>/comments/<%= comment._id %>" method="POST">
                <div class="form-group">
                    <input readonly class="form-control" name="comment[author]" type="text" placeholder="Who writes..."
                        value=" <%= currentUser.username %> ">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" type="text"
                        placeholder="What you want to comment..." rows="3"><%= comment.text %></textarea>
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>

            <a href="/campgrounds/<%= camp._id %>">Go Back</a>
        </div>
    </div>

</div>
<%- include ("../layouts/footer") %>
