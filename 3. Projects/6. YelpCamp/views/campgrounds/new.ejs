<%- include ("../layouts/header") %>
<div class="container">
    <h1 style="text-align: center; margin-top: 50px;">Create a New Campground</h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" name="campName" type="text" placeholder="Campground name...">
                </div>
                <div class="form-group">
                    <input class="form-control" name="campImg" type="text" placeholder="Image URL...">
                </div>
                <div class="form-group">
                    <input class="form-control" name="campDesc" type="text" placeholder="Campground description...">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>

            <a href="/campgrounds">Go Back</a>
        </div>
    </div>

</div>
<%- include ("../layouts/footer") %>
