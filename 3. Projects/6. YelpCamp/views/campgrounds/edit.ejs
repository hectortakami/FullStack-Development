<%- include ("../layouts/header") %>
<div class="container">
    <h1 style="text-align: center; margin-top: 50px;">Edit Campground</h1>
    <div class="row">
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= camp._id %>/edit" method="POST">
                <div class="form-group">
                    <input class="form-control" value="<%= camp.name %>" name="camp[name]" type="text"
                        placeholder="Campground name...">
                    <small class="form-text text-muted">Campground name.</small>
                </div>
                <div class="form-group">
                    <input class="form-control" value="<%= camp.price %>" name="camp[price]" type="number" step="0.01"
                        placeholder="Campground price...">
                    <small class="form-text text-muted">Campground price per night.</small>
                </div>
                <div class="form-group">
                    <input class="form-control" value="<%= camp.image %>" name="camp[image]" type="text"
                        placeholder="Image URL...">
                    <small class="form-text text-muted">Campground image URL.</small>

                </div>
                <div class="form-group">
                    <textarea class="form-control" name="camp[description]" rows="3"
                        placeholder="Campground description..."><%= camp.description %></textarea>
                    <small class="form-text text-muted">Campground description.</small>
                </div>
                <div class="form-group">
                    <input readonly name="username" value="<%= camp.createdBy.username %>" class="form-control"
                        type="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
                </div>
            </form>

            <a href="/campgrounds/<%= camp._id %>">Go Back</a>
        </div>
    </div>

</div>
<%- include ("../layouts/footer") %>
